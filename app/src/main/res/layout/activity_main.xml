<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1d303c"
    tools:context=".MainActivity">

    <!--
        Custom-shape button:
        android:background="@drawable/ovalshape"

        New font:'
        android:fontFamily="@font/oswald"
        android:fontFamily="@font/montserrat"

        New Tooltips
        android:tooltipText="Search"
        android:tooltipText="Microphone"
    -->
    <Button
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ovalshape"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/oswald"
        android:textFontWeight="10"
        android:text="Trending Searches"
        android:textSize="30sp"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/imageView8"
        app:layout_constraintHorizontal_bias="0.54"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/imageView8" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="24dp"
        android:contentDescription="@string/back"
        app:tint="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/imageView8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView8"
        app:srcCompat="@drawable/arrow_back" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="305dp"
        android:layout_height="75dp"
        android:layout_marginTop="16dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/dialog_holo_light_frame" />

    <EditText
        android:id="@+id/editTextText"
        android:layout_width="191dp"
        android:layout_height="49dp"
        android:layout_marginStart="56dp"
        android:autofillHints="name"
        android:background="@null"
        android:ems="10"
        android:hint="@string/search"
        android:inputType="text"
        android:text=""
        app:layout_constraintBottom_toBottomOf="@+id/imageView8"
        app:layout_constraintStart_toStartOf="@+id/imageView8"
        app:layout_constraintTop_toTopOf="@+id/imageView8"
        app:layout_constraintVertical_bias="0.55" />

    <!-- Tooltip is here -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="36dp"
        android:layout_height="32dp"
        android:tooltipText="Search"
        app:layout_constraintBottom_toBottomOf="@+id/imageView8"
        app:layout_constraintEnd_toStartOf="@+id/editTextText"
        app:layout_constraintHorizontal_bias="0.65"
        app:layout_constraintStart_toStartOf="@+id/imageView8"
        app:layout_constraintTop_toTopOf="@+id/imageView8"
        app:srcCompat="@drawable/search" />

    <!-- Tooltip is here -->
    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="43dp"
        android:layout_height="33dp"
        android:layout_marginEnd="16dp"
        android:tooltipText="Microphone"
        app:layout_constraintBottom_toBottomOf="@+id/imageView8"
        app:layout_constraintEnd_toEndOf="@+id/imageView8"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/editTextText"
        app:layout_constraintTop_toTopOf="@+id/imageView8"
        app:srcCompat="@drawable/mic" />


    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="125dp"
        android:layout_height="90dp"
        android:layout_marginStart="42dp"
        android:layout_marginTop="20dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:srcCompat="@drawable/turtle1" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="175dp"
        android:layout_height="70dp"
        android:layout_marginStart="24dp"
        android:text="The Turtle and the Turtlevilles\n\nComedy Series"
        android:fontFamily="@font/montserrat"
        android:textFontWeight="1000"
        android:textSize="14sp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/imageView9"
        app:layout_constraintStart_toEndOf="@+id/imageView9"
        app:layout_constraintTop_toTopOf="@+id/imageView9"
        app:layout_constraintVertical_bias="0.5" />



    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="125dp"
        android:layout_height="90dp"
        android:layout_marginTop="15dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="@+id/imageView9"
        app:layout_constraintTop_toBottomOf="@+id/imageView9"
        app:srcCompat="@drawable/turtle2" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="175dp"
        android:layout_height="70dp"
        android:layout_marginStart="24dp"
        android:text="Extravagent Turtle Life\n\nDocumentary Series"
        android:fontFamily="@font/montserrat"
        android:textFontWeight="1000"
        android:textSize="14sp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/imageView10"
        app:layout_constraintStart_toEndOf="@+id/imageView10"
        app:layout_constraintTop_toTopOf="@+id/imageView10"
        app:layout_constraintVertical_bias="0.5" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="125dp"
        android:layout_height="90dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="@+id/imageView10"
        app:layout_constraintTop_toBottomOf="@+id/imageView10"
        app:srcCompat="@drawable/turtle3" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="175dp"
        android:layout_height="70dp"
        android:layout_marginStart="24dp"
        android:text="The Love of a Turtle\n\nDrama Series"
        android:fontFamily="@font/montserrat"
        android:textFontWeight="1000"
        android:textSize="18sp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/imageView11"
        app:layout_constraintStart_toEndOf="@+id/imageView11"
        app:layout_constraintTop_toTopOf="@+id/imageView11"
        app:layout_constraintVertical_bias="0.5" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="125dp"
        android:layout_height="90dp"
        android:layout_marginTop="15dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="@+id/imageView11"
        app:layout_constraintTop_toBottomOf="@+id/imageView11"
        app:srcCompat="@drawable/turtle4" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="175dp"
        android:layout_height="70dp"
        android:layout_marginStart="24dp"
        android:text="The Amazing World of Turtles\n\nComedy Series"
        android:fontFamily="@font/montserrat"
        android:textFontWeight="1000"
        android:textSize="14sp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/imageView12"
        app:layout_constraintStart_toEndOf="@+id/imageView12"
        app:layout_constraintTop_toTopOf="@+id/imageView12"
        app:layout_constraintVertical_bias="0.5"/>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="90dp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="@+id/imageView12"
        app:layout_constraintTop_toBottomOf="@+id/imageView12"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageView13"
            android:layout_width="125dp"
            android:layout_height="90dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            app:layout_constraintStart_toStartOf="@+id/imageView12"
            app:layout_constraintTop_toBottomOf="@+id/imageView12"
            app:srcCompat="@drawable/turtle5" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="175dp"
            android:layout_height="70dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/montserrat"
            android:text="Regular Turtle\n\nComedy Series"
            android:textColor="@color/white"
            android:textFontWeight="1000"
            android:textSize="18sp" />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>